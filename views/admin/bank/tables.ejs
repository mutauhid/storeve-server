<table id="example2" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>No</th>
      <th>Owner Name</th>
      <th>Bank Name</th>
      <th>No Rekening</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% for(let i = 0; i < bank.length; i++) { %>

    <tr>
      <td><%= i+1 %></td>
      <td><%= bank[i].name %></td>
      <td><%= bank[i].nameBank %></td>
      <td><%= bank[i].noRekening %></td>
      <td>
        <form
          action="/bank/delete/<%=bank[i]._id%>?_method=DELETE"
          method="POST"
        >
          <a href="/bank/edit/<%= bank[i]._id %>" class="btn btn-warning">
            <i class="fas fa-pencil-alt"></i>
            Edit
          </a>
          <button class="btn btn-danger">
            <i class="fas fa-trash"></i> Delete
          </button>
        </form>
      </td>
    </tr>
    <% } %>
  </tbody>
</table>
