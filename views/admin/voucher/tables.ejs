<table id="example2" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>No</th>
      <th>Game Name</th>
      <th>Category</th>
      <th>Nominal</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% for(let i = 0; i < voucher.length; i++) { %>

    <tr>
      <td><%= i+1 %></td>
      <td><%= voucher[i].name %></td>
      <td><%= voucher[i]?.category?.name ?? "-" %></td>
      <td>
        <% voucher[i].nominal.forEach(nominal => { %>
        <span class="badge badge-warning"
          ><%=nominal.coinName%> <%=nominal.coinQuantity%></span
        >
        <% }) %>
      </td>
      <td>
        <% if(voucher[i].status === 'Y') { %>
        <span class="badge badge-primary"> Active </span>
        <%} else { %>
        <span class="badge badge-danger"> Non Active </span>
        <%} %>
      </td>
      <td>
        <form action="" method="POST" style="display: inline-block">
          <button class="btn btn-primary">
            <i class="fas fa-folder"></i>
            <% if(voucher[i].status === 'Y') { %>
            <span> Turn On </span>
            <%} else { %>
            <span>Turn Off</span>
            <%} %>
          </button>
        </form>
        <form
          action="/voucher/delete/<%=voucher[i]._id%>?_method=DELETE"
          method="POST"
          style="display: inline-block"
        >
          <a href="/voucher/edit/<%= voucher[i]._id %>" class="btn btn-warning">
            <i class="fas fa-pencil-alt"></i>
            Edit
          </a>
          <button class="btn btn-danger">
            <i class="fas fa-trash"></i> Delete
          </button>
        </form>
      </td>
    </tr>
    <% } %>
  </tbody>
</table>
